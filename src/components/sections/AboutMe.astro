---
import FileTextIcon from '@/components/icons/FileTextIcon.astro'
import GithubIcon from '@/components/icons/GithubIcon.astro'
import Badge from '@/components/ui/Badge.astro'
import Button from '@/components/ui/Button.astro'
import ProfileImage from '@/components/ui/ProfileImage.astro'
import { sectionIds, useTranslations } from '@/i18n'

const lang = Astro.locals.lang
const t = useTranslations(lang)
---

<section id={sectionIds[lang].about} class="relative py-25 px-6">
  <div class="max-w-screen-md mx-auto">
    <div class="flex flex-col md:flex-row-reverse md:items-center gap-12">
      <ProfileImage class="hidden md:block" />

      <div class="flex-1 md:text-left">
        <Badge class="mb-4" data-i18n="aboutMe.badge">{t('aboutMe.badge')}</Badge>

        <ProfileImage class="mt-3 mb-8 block md:hidden" />

        <h2 class="text-4xl font-bold mb-4 tracking-tight" data-i18n="aboutMe.title">
          {t('aboutMe.title')}
        </h2>

        <p
          class="text-muted-foreground mb-6 text-justify [&>strong]:text-indigo-800 dark:[&>strong]:text-indigo-300"
          data-i18n-group="aboutMe.description"
        >
          <span data-i18n="aboutMe.description.part1">{t('aboutMe.description.part1')}</span>
          <strong data-i18n="aboutMe.description.strong1">{t('aboutMe.description.strong1')}</strong
          >
          <span data-i18n="aboutMe.description.part2">{t('aboutMe.description.part2')}</span>
          <strong data-i18n="aboutMe.description.strong2">{t('aboutMe.description.strong2')}</strong
          >
          <span data-i18n="aboutMe.description.part3">{t('aboutMe.description.part3')}</span>
          <a
            href="https://www.cibertec.edu.pe"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:underline"
          >
            CIBERTEC</a
          >.
          <span data-i18n="aboutMe.description.part4">{t('aboutMe.description.part4')}</span>
          <strong data-i18n="aboutMe.description.strong3">{t('aboutMe.description.strong3')}</strong
          >
          <span data-i18n="aboutMe.description.part5">{t('aboutMe.description.part5')}</span>
          <strong data-i18n="aboutMe.description.strong4">{t('aboutMe.description.strong4')}</strong
          >
          <span data-i18n="aboutMe.description.part6">{t('aboutMe.description.part6')}</span>
          <strong data-i18n="aboutMe.description.strong5">{t('aboutMe.description.strong5')}</strong
          >
          <span data-i18n="aboutMe.description.part7">{t('aboutMe.description.part7')}</span>.

          <br /><br />

          <span data-i18n="aboutMe.description.part8">{t('aboutMe.description.part8')}</span>
          <strong data-i18n="aboutMe.description.strong6">{t('aboutMe.description.strong6')}</strong
          >,
          <strong data-i18n="aboutMe.description.strong7">{t('aboutMe.description.strong7')}</strong
          >
          <span data-i18n="aboutMe.description.part9">{t('aboutMe.description.part9')}</span>
          <strong data-i18n="aboutMe.description.strong8">{t('aboutMe.description.strong8')}</strong
          >
          <span data-i18n="aboutMe.description.part10">{t('aboutMe.description.part10')}</span>
          <strong data-i18n="aboutMe.description.strong9">{t('aboutMe.description.strong9')}</strong
          >.
        </p>

        <div class="flex flex-wrap gap-4 justify-start">
          <a href="https://github.com/jaycodev" target="_blank" rel="noopener noreferrer">
            <Button variant="secondary">
              <GithubIcon class="size-4" />
              <span data-i18n="aboutMe.cta.github">{t('aboutMe.cta.github')}</span>
            </Button>
          </a>
          <a href="/cv/cv-jason-vila.pdf" target="_blank" rel="noopener noreferrer">
            <Button>
              <FileTextIcon class="size-4" />
              <span data-i18n="aboutMe.cta.cv">{t('aboutMe.cta.cv')}</span>
            </Button>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
