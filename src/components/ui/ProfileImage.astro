---
export interface Props {
  class?: string
}

const { class: className = '' } = Astro.props
---

<div class={`mt-10 w-48 h-48 md:w-64 md:h-64 ${className}`}>
  <div class="relative w-full h-full rounded-2xl overflow-hidden bg-gray-100 dark:bg-white/10">
    <img
      src="/images/jason.jpg"
      alt="Foto de perfil de Jason Vila"
      class="w-full h-full object-cover"
    />
  </div>
</div>
